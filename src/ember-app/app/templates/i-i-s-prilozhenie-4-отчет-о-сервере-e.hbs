<h3 class="ui header">{{t "forms.i-i-s-prilozhenie-4-отчет-о-сервере-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-prilozhenie-4-отчет-о-сервере-e-режим="true">
    <label>{{t "forms.i-i-s-prilozhenie-4-отчет-о-сервере-e.режим-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-prilozhenie-4-режим-сервера")
      value=model.режим
      class=(if (v-get validationModel "режим" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "режим" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.расположение.адрес
      class=(if (v-get validationModel.расположение "адрес" "isInvalid") "error")
      label=(t "forms.i-i-s-prilozhenie-4-отчет-о-сервере-e.расположение.адрес-caption")
      data-test-i-i-s-prilozhenie-4-отчет-о-сервере-e-расположение-адрес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.расположение "адрес" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-prilozhenie-4-отчет-о-сервере-e.серверная-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.серверная
      relationName="серверная"
      projection="СервернаяL"
      title=(t "forms.i-i-s-prilozhenie-4-отчет-о-сервере-e.серверная-caption")
      readonly=readonly
      componentName="сервернаяLookup"
      class=(if (v-get validationModel "серверная" "isInvalid") "error")
      data-test-i-i-s-prilozhenie-4-отчет-о-сервере-e-серверная=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "серверная" "message")}}
  </div>
</form>
